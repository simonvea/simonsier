<section>
  <h2 class="posts__title">{{ postsTitle }}</h2>
  <div class="posts">
    {% for post in posts %}
    <article class="post">
      <h2>
        <a class="post__link" href="{{ post.url | url }}"
          >{{ post.data.title }}</a
        >
      </h2>
      <section>
      <time datetime="{{ post.date | dateIso }}"
        >{{ post.date | dateReadable }}</time
      >
      <span
        >â€” {{ helpers.getReadingTime(post.templateContent) }} min lesetid</span
      >
      </section>
      <p>{{post.data.description }}</p>
      <a
        class="post__more"
        href="{{ post.url | url }}"
        aria-label="Les mer om {{ post.data.title }}"
        >Les mer</a
      >
    </article>
    {% endfor %}
  </div>
</section>